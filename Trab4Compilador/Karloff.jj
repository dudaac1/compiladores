// SEQCOMANDOS -> COMANDO SEQCOMANDOS | vazio
class SeqComandos {
  ArrayList<Comando> comandos;

  SeqComandos(ArrayList<Comando> comandos) {
    this.comandos = comandos;
  }

  @Override
  public String toString() {
    String comandos = "";
    for (Comando c : this.comandos)
      comandos += c.toString() + "";
    return comandos;
  }
}

