// TIPO -> "integer" | "bool"
class Tipo {
  String tipo;

  Tipo(String tipo) {
    this.tipo = tipo;
  }

  @Override
  public String toString() {
    return tipo;
  }
}

class Variavel {
  Tipo tipo;
  String nome;

  Variavel(Tipo tipo, String nome) {
    this.tipo = tipo;
    this.nome = nome;
  }

  @Override
  public String toString() {
    return "newVar" + tipo.toString() + nome + ";";
  }
}

// VARDECL -> "newVar" TIPO TOKEN_id ";" VARDECL | vazio
class VarDecl {
  ArrayList<Variavel> variaveis;

  VarDecl(ArrayList<Variavel> variaveis) {
    this.variaveis = variaveis;
  }

  @Override
  public String toString() {
    String variaveis = this.variaveis.get(0).toString(); 
    int i;
    for (i = 1; i < this.variaveis.size(); ++i) 
      variaveis += this.variaveis.get(i).toString();
    return variaveis;
  }
}

