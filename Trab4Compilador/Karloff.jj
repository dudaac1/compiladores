// LISTAEXP -> EXP LISTAEXP' 
// LISTAEXP' -> "," EXP LISTAEXP'
class ListaExp {
  ArrayList<Expressao> exps;

  ListaExp(ArrayList<Expressao> exps) {
    this.exps = exps;
  }

  public void add(Expressao e) {
    this.exps.add(e);
  }

  @Override
  public String toString() {
    if (exps.size() > 0) {
      String exps = this.exps.get(0).toString(); // exp listaexp' e listaexp' -> vazio
      int i;
      for (i = 1; i < this.exps.size(); ++i) // listaexp' -> exp listaexp'
        exps += ", " + this.exps.get(i).toString();
      return exps;
    }
    return ""; // listaexp?
  }
}

