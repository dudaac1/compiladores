  ArrayList<Comando> comandos = new ArrayList();
  ArrayList<Argumento> args = new ArrayList();
  Funcao funcao = null;
} {
  (
    <FUNC> 
    tipo = Tipo() 
    id = <ID> 
    <APARENT> 
    (ListaArg(args))? 
    <FPARENT> 
    <ACHAVES> 
    VarDecl(variaveis) 
    SeqComandos(comandos)
    { 
      funcao = new Funcao(tipo, id.image, args, variaveis, comandos);
      funcoes.add(funcao);
    } 
    <FCHAVES> 
    FuncLinha(funcoes)
  )?
}

